<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="utf-8"/>
	<meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">
	<title>Public list offers</title>

    {{ style('https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css') }}
    {{ style('app') }}
</head>
<body>
    <div class="container">
        <div class="row">
            @each(offer in offers)
                <div class="col {{ offer.premium == 1 ? 'box-premium' : 'box' }}">
                    <div class="col-12">
                        <p>{{ offer.advertiser_name }}</p>
                    </div>
                    <div class="col-12">
                        <span>{{ offer.premium == 1 ? 'Preminum Offer' : 'Normal Offer' }}</span>
                    </div>
                    <div class="col-12">
                        <a href="{{ offer.url }}" class="btn btn-success">Shop Now</a>
                    </div>
                </div>
            @endeach
        </div>
    </div>

    {{ script('https://code.jquery.com/jquery-3.6.0.min.js') }}
    {{ script('https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js') }}
    {{ script('https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js') }}
    {{ script('app') }}
</body>
</html>