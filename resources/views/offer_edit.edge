<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="utf-8"/>
	<meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">
	<title>Offers Create</title>

    {{ style('https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css') }}
    {{ style('app') }}
</head>
<body>
    <div class="container col-12">
        <form action="{{ route('offer.update') }}" method="POST" class="form-type-ajax">
            <div class="form-group">
                <label>Advertiser Name</label>
                <input type="text" name="advertiser_name" class="form-control" value="{{ offer.advertiser_name }}">
            </div>
            <div class="form-group">
                <label>URL</label>
                <input type="text" name="url" class="form-control" value="{{ offer.url }}">
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea name="description" class="form-control">{{ offer.description }}</textarea>
            </div>
            <div class="form-group">
                <label>Starts At</label>
                <input type="date" name="starts_at" class="form-control" value="{{ offer.starts_at }}">
            </div>
            <div class="form-group">
                <label>Ends At</label>
                <input type="date" name="ends_at" class="form-control" value="{{ offer.ends_at }}">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="premium" {{ offer.premium == 1 ? 'checked' : '' }}>
                <label class="form-check-label">Premium</label>
            </div>
            <input type="hidden" name="id" value="{{ offer.id }}">
            <input type="hidden" name="_method" value="PUT"/>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <div class="alert alert-danger form-errors hide"></div>
    </div>

    {{ script('https://code.jquery.com/jquery-3.6.0.min.js') }}
    {{ script('https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js') }}
    {{ script('https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js') }}
    {{ script('app') }}
</body>
</html>